@model IEnumerable<TrayInventoryApp.Models.Shop>

@{
    ViewData["Title"] = "Shop List";
}

<div class="container">
    <!-- Button to Go Back to TrayInventory -->
    <div class="d-flex justify-content-start mb-4">
        <a href="@Url.Action("TrayInventory", "TrayInventory")" class="btn btn-secondary btn-lg px-4 py-2">
            <i class="fas fa-arrow-left"></i> Back to TrayInventory
        </a>
    </div>

    <!-- Page Title -->
    <h2 class="text-center font-weight-bold mb-5">List of Shops</h2>

    <!-- Button to Create a New Shop -->
    <div class="d-flex justify-content-end mb-4">
        <a href="@Url.Action("Create", "Shop")" class="btn btn-success btn-lg px-4 py-2">
            <i class="fas fa-plus-circle"></i> Create New Shop
        </a>
    </div>

    <!-- Shop List Table -->
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th style="width: 40%;">Shop Name</th>
                <th style="width: 30%;">Previous Pending Amount</th>
                <th style="width: 30%;" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var shop in Model)
                {
                    <tr>
                        <td class="py-3">@shop.ShopName</td>
                        <td class="py-3">@shop.PreviousPending.ToString("C")</td>
                        <td class="text-center py-3">
                            <!-- Action Dropdown Menu -->
                            <div class="dropdown">
                                <button class="btn btn-info btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cogs"></i> Actions
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <!-- View Transactions Button -->
                                    <li>
                                        <a href="@Url.Action("Details", "Shop", new { id = shop.ShopID })" class="dropdown-item">
                                            <i class="fas fa-eye"></i> View Transactions
                                        </a>
                                    </li>
                                    <!-- Add Entry Button -->
                                    <li>
                                        <a href="@Url.Action("AddEntry", "Shop", new { shopId = shop.ShopID })" class="dropdown-item">
                                            <i class="fas fa-pencil-alt"></i> Add Entry
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted py-4" style="font-size: 18px;">
                        No shops available. Please add a new shop.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Custom Styles -->
<style>
    .container {
        margin-top: 50px;
        background-color: #f8f9fa;
        padding: 40px 50px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .table th, .table td {
        text-align: left;
        vertical-align: middle;
    }

    .table th {
        font-size: 18px;
        padding: 15px;
    }

    .table td {
        font-size: 16px;
        padding: 12px;
    }

    .btn {
        text-decoration: none;
    }

        .btn:hover {
            text-decoration: none;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    /* Adjust table responsiveness without media queries */
    .table {
        width: 100%;
        margin-top: 20px;
    }

        .table th {
            font-size: 16px;
        }

    .btn-lg {
        font-size: 16px;
        padding: 10px 20px;
    }

    /* Dropdown button styling */
    .dropdown-menu {
        min-width: 200px;
    }
</style>

<!-- FontAwesome for Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
