@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-card">
        <p class="text-center mb-4" style="font-size: 18px; font-weight: bold; text-transform: uppercase; color: #555;">Tray Inventory</p>
        <h2 class="text-center" style="font-weight: bold;">Login</h2>

        <!-- Display error message if login fails -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center mb-4">
                @ViewBag.ErrorMessage
            </div>
        }

        <form method="post">
            <div class="form-group mb-4">
                <label for="username" style="font-weight: bold;">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required />
            </div>

            <div class="form-group mb-4">
                <label for="password" style="font-weight: bold;">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100" style="font-weight: bold;">Login</button>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff; /* Light blue background */
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    .login-card {
        background: #ffffff; /* White card background */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    .form-group {
        margin-bottom: 20px; /* Equal spacing between fields */
    }

        .form-group label {
            font-size: 14px;
            margin-bottom: 5px;
        }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        border: 1px solid #ced4da;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 5px;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .alert-danger {
        font-size: 16px;
        font-weight: bold;
    }
</style>
